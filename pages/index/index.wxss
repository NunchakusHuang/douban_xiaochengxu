/**index.wxss**/
@import "../templates/item/item.wxss";
@import "../templates/searchbar/searchbar.wxss";

page{
  font-family: 'Microsoft Yahei';
}
.outer-group{
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.tableview{
  background: #fff;
  width: 100%;
  height: 100%;
}

.module-group{
  padding: 20px;
  width: 100%;
  box-sizing: border-box;
}

.module-group .module-title{
  font-size: 18px;
  overflow: hidden;
}

.module-group .module-title .module-name{
  color: #494949;
  float: left;
}

.module-group .module-title .more-navigator{
  color: #41be57;
  float: right;
  font-size: 16px;
}

.module-group .module-scroll-view{
  width: 100%;
  white-space: nowrap;
  margin-top: 20px;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.item-navigator{
  display: inline-block;
  padding-right: 8px;
}

.item-navigator:last-of-type{
  padding-right: 0;
}
