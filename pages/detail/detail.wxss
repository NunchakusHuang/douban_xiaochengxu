/* pages/detail/detail.wxss */
@import '../templates/rate/rate.wxss';
@import '../templates/comment/comment.wxss';

.container{
    background: #fff;
    padding-left: 13px;
    padding-right: 13px;
    padding-top: 33px;
    overflow: hidden;
}

.item-title{
    font-size: 24px;
    display: block;
}

.item-detail-group{
    display: flex;
    margin-top: 15px;
}

.item-detail-group .item-info{
    flex: 1;
    font-size: 14px;
}

.item-info .rate-group .average-text{
    color: #353535;
    margin-left: 5px;
}

.item-info .rate-group .count-text{
    color: #b3b3b3;
    margin-left: 10px;
}

.item-info .item-sub-info{
    margin-top: 24px;
    font-size: 16px;
    line-height: 1.5em;
}

.item-detail-group .item-thumbnail-group{
    width: 100px;
    height: 150px;
    margin-left: 5px;
}

.item-detail-group .item-thumbnail-group image{
    width: 100%;
    height: 100%;
}

.rate-group image{
    width: 15px;
    height: 15px;
}

.item-tag-group{
    margin-top: 42px;
}

.item-tag-group .item-tag-title{
    color: #b3b3b3;
    font-size: 16px;
}

.item-tag-group .item-tag-list{
    margin-top: 10px;
    overflow: hidden;
}

.item-tag-list .item-tag-text{
    background: #f5f5f5;
    text-align: center;
    font-size: 16px;
    color: #353535;
    padding: 10px 15px;
    border-radius: 20px;
    float: left;
    margin-right: 10px;
    margin-bottom: 10px;
}

.comment-group{
    margin-top: 40px;
}

.comment-group .comment-title{
    color: #b3b3b3;
    font-size: 16px;
}

.more-comment-btn{
    display: block;
    color: #42bd56;
    font-size: 18px;
    text-align: center;
    margin: 20px auto 50px;
    margin-bottom: 50px;
}